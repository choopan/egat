<%initquatity=@icoilinit.InitQuantity%>
<p><table border=1>
		<tr><th><center>Date</center></th><th><center>ปริมาณน้ำมันในคลัง [ถัง]</center></th><th><center>เบิกจ่าย [ถัง]</center></th><th><center>ซื้อเพิ่ม [ถัง]</center></th></tr>
	
             <% if !@icoilbalance.blank? %>
        	<% for ic in @icoilbalance %>
		    <%if ic.Quantity >=0%>
