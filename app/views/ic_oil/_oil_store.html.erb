				<%m=icoildate=ic.Recv_date.to_s.split('-')%>
				<%initquatity+=ic.Quantitypass%>
				<tr><td><center><%=m[2]+"/"+m[1]+"/"+m[0]%></center></td><td><center><%=initquatity%></center></td><td><center>-</center></td><td><center><%=ic.Quantitypass%></center></td></tr>
			<%end%>
		    <%else%>
			<%icoildate=ic.Date.to_s%>
