			<tr><td><center><%=m[2]+"/"+m[1]+"/"+m[0]%></center></td><td><center><%=initquatity%></center></td><td><center><%= -1*ic.Quantity%></center></td><td><center>-</center></td></tr>
		    <%end%>
	          <%end%>
               <%end%>
         
</table>
