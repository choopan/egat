<p><h2>  คลังรายการน้ำมัน</h2></p>
<%@initquatity=@icoilinit.InitQuantity%>
<p><table border=1>
		<tr><th><center>Date</center></th><th><center>ปริมาณน้ำมันในคลัง [ถัง]</center></th><th><center>เบิกจ่าย [ถัง]</center></th><th><center>ซื้อเพิ่ม [ถัง]</center></th></tr>
		<tr><td><center><%=@icoilinit.Date%></center></td><td><center><%=@initquatity%></center></td><td colspan=2><center><%= button_to "แก้ไข", :action => "modify_icoilinit" %></center></td></tr>
		<% for i in 0..@num-1 do%>
		    <%if @icoilbalance[i].Quantity >=0%>
			<%@initquatity+=@icoilbalance[i].Quantity%>
			<tr><td><center><%=@icoilbalance[i].Date%></center></td><td><center><%=@initquatity%></center></td><td><center></center></td><td><center><%=@icoilbalance[i].Quantity%></center></td></tr>
		    <%else%>
			<%@initquatity+=@icoilbalance[i].Quantity%>
			<tr><td><center><%=@icoilbalance[i].Date%></center></td><td><center><%=@initquatity%></center></td><td><center><%= -1*@icoilbalance[i].Quantity%></center></td><td><center> </center></td></tr>
		    <%end%>
		<%end%>

		<tr><td></td><td></td><td></td><td></td></tr>
</table></p>
