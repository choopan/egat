<script>
	$(function(){
		setValueText1(); 
	});
	
	function setValueText1(){
		$("#valuetext1").datepicker({
                     dateFormat: 'dd/mm/yy',
		     showOn : "button",
                     buttonImage: "/ptu3/assets/icon_calendar.gif",
		     buttonImageOnly : true
                });
	}
	
</script>
<p><h2>รายการรับน้ำมัน</h2></p>

<p>
<%= form_for @icoilbalance ,:url => {:action => "update_buy"}, :html => {:method => "post", :name => 'icoilbalance'} do |f| %>
	<table>
	  <input type=hidden name="id" value=<%= @icoilbalance.id %>>
	  <%m=@icoilbalance.Date.to_s.split(' ')[0].split('-')%>
	  <tr><td><%= f.label :Date, "วันที่สั่งน้ำมัน", :class => 'inline' %></td><td><input type="text" name="Date" size="15" value= <%=m[2]+'/'+m[1]+'/'+m[0]%> /></td></tr>
	  <tr><td><%= f.label :Quantity, "ปริมาณการสั่งต่อครั้ง [ถัง]", :class => 'inline' %></td><td><input type="text" name="Quantity" size="15" value=<%=@icoilbalance.Quantity%> /></td></tr>
	  <tr><td><%= f.label :Price, "ราคาต่อลิตร", :class => 'inline' %></td><td><input type="text" name="Price" size="15" value=<%=@icoilbalance.Price%> /></td></tr>
	<%if @icoilbalance.Recv_date!=nil && @icoilbalance.Quantitypass!=nil%>
	  <%n=@icoilbalance.Recv_date.to_s.split('-')%>
	  <tr><td><%= f.label :Recv_date, "วันที่รับน้ำมัน", :class => 'inline' %></td><td><input id="valuetext1" type="text" name="Recv_date" size="15" value= <%=n[2]+'/'+n[1]+'/'+n[0]%> /></td></tr>
	  <tr><td><%= f.label :Quantitypass, "ปริมาณที่ผ่านการทดสอบ [ถัง]", :class => 'inline' %></td><td><input type="text" name="Quantitypass" size="15" value=<%=@icoilbalance.Quantitypass%> /></td></tr>
	<%else%>
	  <tr><td><%= f.label :Recv_date, "วันที่รับน้ำมัน", :class => 'inline' %></td><td><input id="valuetext1" type="text" name="Recv_date" size="15" /></td></tr>
	  <tr><td><%= f.label :Quantitypass, "ปริมาณที่ผ่านการทดสอบ [ถัง]", :class => 'inline' %></td><td><input type="text" name="Quantitypass" size="15" /></td></tr>
	<%end%>
	  <tr><td><%= f.submit "Save", :class => "cupid-green" %></td><td></td></tr>
	</table>
<%end%>
</p>
