<%= error_messages_for :visual_inspection, 
  :header_message => "Please Try Again!", :class => 'error' %>
<div id="transformer_search">
  <%= form_for [@transformer, @visual_inspection] do |f| -%>
    <div class="prefix_6 grid_4 suffix_6">
      <p>
        <%= f.label :transformer_id, "หม้อแปลงไฟฟ้า" %>
        <%= transformer_names_drop_down_list(f, :transformer_id) %>
      </p>
    </div>
    <div class="grid_3">
      <p>
        <%= f.label :test_type, 'วาระการตรวจสอบ' %>
        <%= f.select(:test_type, ["Commissioning", "Weekly", "1 year"]) %>
      </p>
    </div>
    <div class="grid_3">
      <p>
        <%= f.label :test_by, 'ผู้ตรวจสอบ' %>
        <%= f.text_field :test_by%>      
      </p>
    </div>
    <div class="grid_3">
      <p>
        <%= f.label :test_date, 'วันท่ีตรวจสอบ' %>
        <%= f.text_field :test_date%>      
      </p>
    </div>    
    <div class="grid_3">
      <p>
        <%= f.label :oltc_counter, 'OLTC Counter'%>
        <%= f.text_field :oltc_counter%>
      </p>    
    </div>
    <div class="grid_3">
      <p>
        <%= f.label :work_order, 'เลขที่ใบสั่งงาน'%>
        <%= f.text_field :work_order%>
      </p>
    </div>
    <div class="clear"></div>
    <div id="tabs">
      <ul>
        <li><a href="#tabs-1">1. สภาพทั่วไป</a></li>
        <li><a href="#tabs-2">2. Bushing Condition</a></li>
      </ul>
      <div id="tabs-1">
        <h2>1. สภาพทั่วไป</h2>
        <%= f.fields_for :general_condition do |general_condition_f|%>
          <%= 
            render :partial => 'general_conditions/max_load', 
                   :locals =>{:form => general_condition_f}
          %>
          <%= 
            render :partial => 'general_conditions/sound', 
                   :locals =>{:form => general_condition_f}
          %>
          <%= 
            render :partial => 'general_conditions/vibration', 
                   :locals =>{:form => general_condition_f}
          %>
          <%= 
            render :partial => 'general_conditions/ground_connector', 
                   :locals =>{:form => general_condition_f}
          %>
          <%= 
            render :partial => 'general_conditions/foundation', 
                   :locals =>{:form => general_condition_f}
          %>
          <%= 
            render :partial => 'general_conditions/animal_protect', 
                   :locals =>{:form => general_condition_f}
          %>
        <% end -%>        
      </div>
      <div id="tabs-2">
        <h2>2. สภาพทั่วไป</h2>
      </div>
    </div>
    <div class="prefix_4 grid_4">
      <p>
        <%= f.submit "Save", :disable_with => 'Saveing...' %>
      </p>
  <% end -%>
</div>


