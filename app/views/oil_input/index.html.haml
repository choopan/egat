%h1 ผลทดสอบทางน้ํามัน
= form_for :oil_dga do |form|
  .grid_3.prefix_4
    = label :transformer_information, :transformer_id, "หม้อแปลงไฟฟ้า" 
  .grid_4
    = transformer_names_drop_down_list(form)
  .clear
    &nbsp;
  = render :partial => 'transformer_details', :locals => {:transformer => @transformer}
  %hr
  #main_tank_dga
    .grid_8
      = label :oil_input, 'main_tank_dga', 'Main Tank DGA'
      = oil_dga_drop_down_list(@oil_dgas)
      = new_main_tank_dga_link(@transformer)
      - unless @oil_dgas.blank?
        = edit_main_tank_dga_link(@transformer, @oil_dgas.first)
        = delete_main_tank_dga_link(@transformer, @oil_dgas.first)
      - else 
        = link_to("Edit", "#", :class => "edit")
        = link_to("Edit", "#", :class => "delete")
  #oltc_dga
    .grid_8
      = label :oil_input, 'oltc_dga', "DGA of OLTC"
      = oltc_dga_drop_down_list
      = new_oltc_dga_link
      = edit_oltc_dga_link
      = delete_oltc_dga_link
  .clear
  %br
  #furan
    .grid_8
      = label :oil_input, 'furan', 'Furan'
      = furan_drop_down_list
      = new_furan_link
      = edit_furan_link
      = delete_furan_link
  #oil_contamination
    .grid_8
      = label :oil_input, 'oil_contamination', 'Oil Contamination'
      = oil_contamination_drop_down_list
      = new_oil_contamination_link
      = edit_oil_contamination_link
      = delete_oil_contamination_link
  .clear
  %br
  #oltc_oil_contamination
    .grid_8
      = label :oil_input, 'oltc_oil_contamination', 'OLTC Oil Contamination'
    
      
