<% content_for :javascript do %>
  <%= javascript_include_tag 'jquery.flot.min.js','jquery.flot.selection.min.js',
    'jquery.flot.axislabels.js',
                           'controllers/transformer_informations.js'%>
<% end %>



<% form_for :station do |f| -%>
<div class="grid_3">
  <%= f.label(:station, "เขต")%>
</div>
<div class="grid_3">
  <%= 
      @stations = Station.find(:all, :group => "region")
      f.collection_select(:station, @stations, :id, :region, :prompt => true)
  %>
</div>
<div class="clear"></div> 
<div id="transformer_name_label" class="grid_3">
  <label for="station_transformer_name">ชื่อหม้อแปลงไฟฟ้า</labe>
</div>
<div id="transformer_name_select" class="grid_3">
  <select id="station_transformer_name" name="station[transformer_name]"></select>
</div>
<script id="transformer_names" type="text/x-jquery-tmpl">
  <option value=${$data["transformer"]["id"]}> ${$data["transformer"]["transformer_name"]} </option>
</script>
<% end -%>
<div class="clear"></div> 
<div class="grid_16">
<div id="placeholder" style="width:320px;height:320px"></div>
</div>
<div class="clear"></div> 

<div id="transformers" class="grid_16">
  <table id="transformers_table">
    <thead>
      <th>Id</th>
      <th>Device No.</th>
      <th>Equipment No.</th>
      <th>Overall Condition(%)</th>
      <th>Importance Index System(%)</th>
      <th>Risk</th>
      <th>Action</th>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>
</div>

<script id="transformers_script" type="text/x-jquery-tmpl">
  <tr>
    <td>${id}</td>
    <td>${$data["transformer"]["transformer_name"]}</td>
    <td>${$data["transformer"]["egatsn"]}</td>
    <td>${percent_hi}</td>
    <td><a href="#" class="importance_index">${importance_index}</a></td>
    <td>${$data["risk"]["risk"]}</td>
    <td>${$data["risk"]["action"]}</td>
  </tr>
</script>

</div>
