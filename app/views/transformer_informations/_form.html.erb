<style type="text/css">
	.ui-autocomplete {
		max-height: 300px;
		overflow-y: auto;
}
img {
  margin: 0;
}
.grid_7 input {
  width: 330px;
}
</style>
<%= error_messages_for :transformer_information, 
  :header_message => "Please Try Again!", :class => 'error' %>
<%= form_for @transformer_information do |f| %>
  <div class="grid_6">
    <%= render :partial => 'transformer_name', :locals =>{:f => f} %>
  </div>
  <div class="grid_7">
    <p>
      <%= label :transformer_information, :recorded_date, "Recorded Date" %>
      <%= f.text_field :recorded_date, :size => 8%>              
    </p>
  </div>
  <div class="clear"></div> 
  <div class="grid_6">
    <%= render :partial => 'bus_voltage_hv', :locals => {:f => f} %>
  </div>
  
  <div class="grid_6">
    <%= render :partial => 'system_fault_level_hv', :locals => {:f => f} %>    
  </div>
  <div class="grid_4">
    <p>
    <label for="system_fault_level_hv_mva">[MVA]</label>
    <%= f.text_field :system_fault_level_hv_mva, :size => 10 ,:disabled => true%>    
    </p>
  </div>
  <div class="clear"></div> 
  <div class="grid_6">
    <%= render :partial => 'bus_voltage_lv', :locals => {:f => f} %>
  </div>
  <div class="grid_6">
    <%= render :partial => 'system_fault_level_lv', :locals => {:f => f} %>    
  </div>
  <div class="grid_4">
    <p>
    <label for="system_fault_level_lv_mva">[MVA]</label>
    <%= f.text_field :system_fault_level_lv_mva, :size => 10, :disabled => true %>    
    </p>
  </div>
  <div class="clear"></div> 
  <div class="grid_6">
    <%= render :partial => 'probability_of_force_outage', :locals => {:f => f} %>
  </div>
  <div class="grid_6">
    <%= render :partial => 'social_aspect', :locals => {:f => f} %>
  </div>
  <div class="clear"></div> 
  <div class="grid_6">
    <%= render :partial => 'system_location', :locals => {:f => f} %>
  </div>
  <div class="grid_6">
    <%= render :partial => 'public_image', :locals => {:f => f} %>
  </div>
  <div class="clear"></div> 
  <div class="grid_6">
    <%= render :partial => 'n1_criteria', :locals => {:f => f} %>
  </div>
  <div class="grid_6">
    <%= render :partial => 'application_use', :locals => {:f => f} %>
  </div>
  <div class="clear"></div> 
  <div class="grid_6">
    <%= render :partial => 'system_stability', :locals => {:f => f} %>
  </div>
  <div class="grid_6">
    <%= render :partial => 'pollution', :locals => {:f => f} %>
  </div>
  <div class="clear"></div> 
  <%= render :partial => 'damage_of_propertry', 
             :locals =>{:f => f, :transformer_information => @transformer_information}  
  %>


  <br>
  <%= render :partial => 'load_pattern_per_year', :locals =>{:f => f}  %>
  <div class="clear"></div>
  <div class="grid_8">
    <%#= render :partial => 'overall_condition', :locals => {:f => f} 
    %>
  </div>
  
  <center>
  	<hr>
  <div class="grid_16">
    <%= f.submit 'Save', :class => 'cupid-green' %>
  </div>
 </center>
<% end %>

