<script class="code" type="text/javascript" language="javascript">


function redirect() //onClick(href)
{
	var chart1="0";
	var unit1="0";
	for(i=0;i<document.form.chart.length;i++){
		if(document.form.chart[i].checked==true){
			chart1 = document.form.chart[i].value;
		}
	}
	for(i=0;i<document.form.unit.length;i++){
		if(document.form.unit[i].checked==true){
			unit1 = document.form.unit[i].value;
		}
	}
	if((chart1=="1")&&(unit1=="1")){
		window.location = "/transformer_chart/report_damaged_f?chart=1&unit=1&charts=<%= params[:charts] %>&count=<%=@count%>";
	}else if((chart1=="1")&&(unit1=="2")){
		window.location = "/transformer_chart/report_damaged_f?chart=1&unit=2&charts=<%= params[:charts] %>&count=<%=@count%>";
	}else if((chart1=="2")&&(unit1=="1")){
		window.location = "/transformer_chart/report_damaged_f?chart=2&unit=1&charts=<%= params[:charts] %>&count=<%=@count%>";
	}else{
		window.location = "/transformer_chart/report_damaged_f?chart=2&unit=2&charts=<%= params[:charts] %>&count=<%=@count%>";
	}
//	window.location = href;
	return false;
}


