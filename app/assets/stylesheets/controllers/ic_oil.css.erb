label.inline {
  width: 400px;
  display: inline !important;
  float: left;
  font-size: 14px
}


select, .chemicals input[type="text"] {
	width: 100px;
}

select, .chemicals input[type="text"] {
	display: inline !important;
}


.span-ppm {
  font-size: 15px;
}

sub {
  font-size: 12px;
  vertical-align: bottom;
}

dt {
  float: left;
  width: 250px;
  font-size: 12px;
  font-weight: bold;
}

dd {
  float: left;
  font-size: 12px;
}

dt, dd {
  display: inline;
}

input[type="submit"].cupid-green, button.cupid-green {
  width: 370px;
}

input[type="submit"].ic-cupid-green, button.cupid-green {
  width: 250px;
}



.field_with_errors {
  padding: 2px;
  background-color: red;
}

p.ecoconclusion { 
  display: inline-block;
  font-size: 16px;
  text-align: center;
  background-color: #66ccff; 
  padding: 10px 20px 10px 20px;
}

p.ecoconclusionlabel { 
  display: inline;
  font-size: 16px;
}

a:hover {
        text-decoration:none;
}

a.edit, a.delete, a.add {
        padding-left:25px;
        background-repeat:no-repeat;
        background-position:left center;
}
a.add {
        background-image:url(<%= asset_path 'icons/add.png' %>)
}
a.edit {
        background-image:url(<%= asset_path 'icons/page_edit.png' %>)
}
a.delete {
        background-image:url(<%= asset_path '/icons/delete.png' %>)
}

